.postcard .postcard-nav {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.postcard .postcard-tab {
  position: absolute;
  right: 30rpx;
  display: flex;
  justify-items: start;
  margin-top: 180rpx;
}
.postcard .postcard-tab .tab-cnt {
  display: flex;
  justify-items: center;
  align-items: center;
  font-size: 20rpx;
  border-radius: 40rpx;
  width: 85rpx;
  height: 30rpx;
  overflow: hidden;
  margin-right: 10rpx;
}
.postcard .postcard-tab .tab-cnt .cnt-ic {
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
  width: 60%;
}
.postcard .postcard-tab .tab-cnt .cnt-text {
  width: 40%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  padding-right: 10rpx;
}
.postcard .postcard-centent {
  padding-top: 250rpx;
}