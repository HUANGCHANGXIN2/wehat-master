@charset "UTF-8";
.index .nav {
  position: fixed;
  height: 88%;
  width: 500rpx;
  top: 10%;
  left: 5%;
  -webkit-transform: scale(0.9, 0.9) translateX(-100%);
          transform: scale(0.9, 0.9) translateX(-100%);
  opacity: 0;
  transition: all 0.4s;
  background: #f1f1f1;
  font-size: 24rpx;
  text-align: center;
}
.index .nav .nav-list {
  box-sizing: border-box;
  color: #8799a3;
  height: 900rpx;
  width: 500rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 4rpx 8rpx 26rpx rgba(0, 0, 0, 0.3);
  padding: 30rpx;
}
.index .nav .nav-list .list-title {
  font-size: 24rpx;
}
.index .nav .nav-list .list-wxsq {
  width: 100%;
  padding-bottom: 30rpx;
}
.index .nav .nav-list .list-wxsq .list-wxsq-title {
  display: flex;
  justify-items: start;
  align-items: center;
}
.index .nav .nav-list .list-wxsq .list-wxsq-title .title-right {
  margin-left: 20rpx;
  font-size: 32rpx;
}
.index .nav .nav-list .list-wxsq p {
  width: 180rpx;
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 50rpx;
  text-align: center;
  background: #39b54a;
  color: #fff;
  font-size: 26rpx;
  margin: 0 auto;
}
.index .nav .nav-list .list-data {
  font-size: 26rpx;
}
.index .nav .nav-list .list-data button {
  position: absolute;
  width: 100%;
  top: 88rpx;
  z-index: 99;
  opacity: 0;
}
.index .nav .nav-list .at-list__item--thumb .item-thumb {
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.index .nav .nav-list .at-list__item {
  color: #8799a3 !important;
  font-size: 26rpx;
}
.index .nav .nav-list .at-list__item-content {
  margin-right: 200rpx;
}
.index .nav .nav-bottom {
  width: 100%;
  position: fixed;
  bottom: 0;
  text-align: center;
  color: #40a9ff;
}
.index .content {
  background: #fff;
  width: 100%;
  height: 100%;
  -webkit-transform: scale(1, 1) translateX(0%);
          transform: scale(1, 1) translateX(0%);
  transition: all 0.4s;
  position: fixed;
  overflow-y: scroll;
  /*解决ios上滑动不流畅*/
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  /* firefox 隐藏滑动条*/
  -ms-overflow-style: none;
  /* IE 10+ 隐藏滑动条*/
}
.index .content .modal {
  height: 100%;
  width: 100%;
  position: absolute;
  background: #f1f1f1;
  opacity: .3;
  z-index: 99999;
  display: none;
}
.index .content .content-avatar {
  margin-top: 30rpx;
  margin-left: 10rpx;
}
.index .content .title {
  height: 350rpx;
  background: url("https://blog.ykxingxin.cn/upload/2020/07/%E5%87%9B-331cf1eeee5d40c2abe8560fd171d7da.jpg") no-repeat;
  background-size: 100%;
  padding: 20rpx;
}
.index .content .title .title-content {
  text-align: center;
  font-weight: bold;
  color: #fff;
  text-shadow: 4rpx 8rpx 20rpx black;
  font-size: 50rpx;
}
.index .content .title .title-content .jinrishici {
  font-size: 36rpx;
  margin-top: 50rpx;
}
.index .content .index-tab {
  display: flex;
  justify-items: center;
  width: 100%;
  margin: 20rpx 0;
}
.index .content .index-tab view {
  text-align: center;
  width: 50%;
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
}
.index .content .index-list {
  background: #fff;
}
.index .content .post-button {
  position: fixed;
  right: 60rpx;
  bottom: 150rpx;
}
.index .at-search-bar__action {
  border-radius: 50rpx;
  width: 80rpx;
  text-align: center;
  background: #40a9ff;
  box-shadow: 4rpx 8rpx 26rpx rgba(64, 169, 255, 0.3);
}
.index image {
  display: inline;
}